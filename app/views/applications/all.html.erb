<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>List of Applications</h2>
        
</div>
<div class="col-lg-2">

</div>
        </div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Click on Application Id to view details.</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>

        <a class="close-link">
            <i class="fa fa-times"></i>
        </a>
    </div>
</div>
<div class="ibox-content">

<table class="table table-striped table-bordered table-hover dataTables-example">
<thead>
            <tr>
                <th>#</th>
                <% @resources[0].each do |key, value| %>
                    <th><%= key %></th>
                <% end %>
                </tr>
        </thead>
        <tbody>
            <% @resources.each_with_index do |resource,index| %>
                <tr>
                    <td><%= index+1 %></td>
                    <% resource.each_with_index do |(key,value),index2| %>
                        <% if key == 'ApplicationID' %> 
                            <td><%= link_to value, 
                            :controller => "applications", 
                            :action => "details", 
                            :ApplicationID => value %></td>
                        <% else %>
                            <td><%= value %></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </tbody>


</table>

</div>
</div>
</div>
</div>

</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.dataTables-example').DataTable({
        pageLength: 25,
        responsive: true,
        dom: '<"html5buttons"B>lTfgitp',
        buttons: [
            { extend: 'copy'},
            {extend: 'csv'},
            {extend: 'excel', title: 'List of Applications'},
            {extend: 'pdf', title: 'List of Applications'},

            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                }
            }
        ]

    });


});



</script>

<% end %>
