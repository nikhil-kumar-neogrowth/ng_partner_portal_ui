<h1>Applications</h1>
<!-- <p>Find me in app/views/applications/details.html.erb</p> -->


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <% @resources[0].each do |key, value| %>
                    <th><%= key %></th>
                <% end %>
                </tr>
        </thead>
        <tbody>
            <% @resources.each_with_index do |resource,index| %>
                <tr>
                    <td><%= index+1 %></td>
                    <% resource.each do |key, value| %>
                        <% if key == 'ApplicationID' %> 
                            <td><%= link_to value, 
                            :controller => "applications", 
                            :action => "details", 
                            :ApplicationID => value %></td>
                        <% else %>
                            <td><%= value %></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>